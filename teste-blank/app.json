{
  "expo": {
    "name": "By Grace Bible",
    "slug": "By Grace Bible",
    "version": "1.0.0",
    "owner": "Zoes God",
    "description":"A New Bible App",
    "githubUrl":"https://github.com/zoesgod/bygrace",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "auto",
